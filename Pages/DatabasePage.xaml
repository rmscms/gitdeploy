<Page x:Class="GitDeployPro.Pages.DatabasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="DatabasePage">

    <Grid Background="#1E1F22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="#2B2D31" BorderBrush="#1B1C1F" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Primary Toolbar -->
                <Border Grid.Row="0" Background="#25262A" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Actions -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="NewConnectionButton" Height="34" Padding="14,0" Background="#3F8EF7" Foreground="White" BorderThickness="0" Click="NewConnectionButton_Click" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âž•" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="New Connection" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Border Width="1" Background="#3A3B40" Margin="12,4"/>

                            <Button x:Name="SavedConnectionsButton" Height="34" Padding="14,0" Background="#3A3B40" Foreground="#FFFFFF" BorderThickness="0" Click="SavedConnectionsButton_Click" Cursor="Hand" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="Saved"/>
                                    <TextBlock x:Name="SavedCountBadge" Text=" (0)" Foreground="#808080"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="LocalhostButton" Height="34" Padding="14,0" Background="#2E7D32" Foreground="White" BorderThickness="0" Click="LocalhostButton_Click" Cursor="Hand" ToolTip="Quick connect to localhost MySQL">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ " FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="Localhost"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Center: Connection Status -->
                        <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="#666666" Margin="0,0,8,0"/>
                                <TextBlock x:Name="ConnectionStatusText" Text="Not Connected" Foreground="#A0A0A0" FontSize="13"/>
                                <TextBlock x:Name="ActiveDatabaseText" Text="" Foreground="#3F8EF7" FontSize="13" FontWeight="SemiBold" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Right Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="RefreshButton" Height="34" Padding="12,0" Background="#3A3B40" Foreground="#FFFFFF" BorderThickness="0" Click="RefreshSchemaButton_Click" IsEnabled="False" Cursor="Hand" ToolTip="Refresh Schema">
                                <TextBlock Text="ðŸ”„" FontSize="14"/>
                            </Button>
                            <Button x:Name="SettingsButton" Height="34" Padding="12,0" Background="#3A3B40" Foreground="#FFFFFF" BorderThickness="0" Click="OpenConnectionManager_Click" Cursor="Hand" Margin="8,0,0,0" ToolTip="Connection Manager">
                                <TextBlock Text="âš™ï¸" FontSize="14"/>
                            </Button>
                            <Button x:Name="DisconnectButton" Height="34" Padding="14,0" Background="#8A2C2C" Foreground="White" BorderThickness="0" Click="DisconnectButton_Click" IsEnabled="False" Cursor="Hand" Margin="8,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="Disconnect"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Secondary Toolbar: Database & Table Selectors -->
                <Border x:Name="SelectorBar" Grid.Row="1" Background="#2B2D31" Padding="12,8" Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="ðŸ›¢ï¸ Database:" Grid.Column="0" Foreground="#A0A0A0" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="DatabaseSelector" Grid.Column="1" Height="30" SelectionChanged="DatabaseSelector_SelectionChanged"/>

                        <TextBlock Text="ðŸ“‹ Table:" Grid.Column="3" Foreground="#A0A0A0" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="TableSelector" Grid.Column="4" Height="30" SelectionChanged="TableSelector_SelectionChanged"/>

                        <ProgressBar x:Name="QueryProgress" Grid.Column="6" Width="150" Height="6" VerticalAlignment="Center" Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Disconnected State -->
            <Grid x:Name="DisconnectedState" Visibility="Visible">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E1F22" Offset="0"/>
                        <GradientStop Color="#252830" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
                    <TextBlock Text="ðŸ—„ï¸" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Database Studio" FontSize="32" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Connect to MySQL/MariaDB databases, browse tables, run queries and manage your data with ease." Foreground="#808080" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" LineHeight="22"/>
                    
                    <Border Margin="0,40,0,0" Background="#2B2D31" CornerRadius="12" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Quick Start" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,16"/>
                            
                            <Button Height="44" Background="#3F8EF7" Foreground="White" BorderThickness="0" Click="LocalhostButton_Click" Cursor="Hand" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ " FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="Connect to Localhost (127.0.0.1)" FontSize="14"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Height="44" Background="#3A3B40" Foreground="White" BorderThickness="0" Click="NewConnectionButton_Click" Cursor="Hand" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âž•" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="New Custom Connection" FontSize="14"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Height="44" Background="#3A3B40" Foreground="White" BorderThickness="0" Click="SavedConnectionsButton_Click" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="Open Saved Connection" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Connected State: Database Content -->
            <Grid x:Name="DatabaseContent" Visibility="Collapsed" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Query Editor -->
                <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="8,4,0,6">
                            <TextBlock x:Name="TableTitleText" Text="SQL Editor" FontSize="13" FontWeight="SemiBold" Foreground="#808080"/>
                            <TextBlock Text=" Â· Ctrl+Space for autocomplete" FontSize="11" Foreground="#505050" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                        <avalon:TextEditor x:Name="SqlEditor" 
                                           Grid.Row="1"
                                           FontFamily="Consolas"
                                           FontSize="14"
                                           Background="#1E1E1E"
                                           Foreground="#D4D4D4"
                                           ShowLineNumbers="True"
                                           LineNumbersForeground="#505050"
                                           HorizontalScrollBarVisibility="Auto"
                                           VerticalScrollBarVisibility="Auto"
                                           WordWrap="False"/>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
                    <Button x:Name="RunQueryButton" Height="36" Padding="20,0" Background="#3F8EF7" Foreground="White" BorderThickness="0" Click="RunQueryButton_Click" FontWeight="SemiBold" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â–¶" Margin="0,0,8,0"/>
                            <TextBlock Text="Run Query"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="ClearQueryButton" Content="Clear" Height="36" Padding="16,0" Background="#3A3B40" Foreground="#FFFFFF" BorderThickness="0" Click="ClearQueryButton_Click" Margin="10,0,0,0" Cursor="Hand"/>
                </StackPanel>

                <!-- Results Grid -->
                <Border Grid.Row="2" Background="#232428" CornerRadius="10">
                    <DataGrid x:Name="ResultsGrid" AutoGenerateColumns="True" HeadersVisibility="Column" GridLinesVisibility="Horizontal" Background="Transparent" Foreground="#FFFFFF" BorderThickness="0" RowBackground="#1F2023" AlternatingRowBackground="#2A2B30"/>
                </Border>

                <TextBlock x:Name="ResultStatusText" Grid.Row="3" Margin="0,10,0,0" Foreground="#A0A0A0"/>
            </Grid>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Background="#CC000000" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LoadingText" Text="Connecting..." Foreground="#FFFFFF" FontSize="18" FontWeight="SemiBold" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

    <!-- New Connection Modal -->
    <Page.Resources>
        <Style x:Key="ModalOverlay" TargetType="Border">
            <Setter Property="Background" Value="#AA000000"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Page.Resources>
</Page>
