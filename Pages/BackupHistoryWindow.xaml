<mah:MetroWindow x:Class="GitDeployPro.Pages.BackupHistoryWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="Backup history"
                 Width="680"
                 Height="420"
                 WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <DataGrid ItemsSource="{Binding History}"
                  AutoGenerateColumns="False"
                  Background="#1A1A1A"
                  Foreground="White"
                  BorderThickness="0"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Started" Binding="{Binding StartedUtc, StringFormat={}{0:G}}" Width="160"/>
                <DataGridTextColumn Header="Schedule" Binding="{Binding ScheduleName}" Width="150"/>
                <DataGridTextColumn Header="Database" Binding="{Binding DatabaseName}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Message}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>

