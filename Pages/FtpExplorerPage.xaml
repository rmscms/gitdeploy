<Page x:Class="GitDeployPro.Pages.FtpExplorerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#202020">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ—‚ï¸" FontSize="40" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="White"/>
                <StackPanel>
                    <TextBlock Text="FTP Explorer" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="HeaderSubtitle"
                               Text="Browse your deployment servers"
                               FontSize="14"
                               Foreground="#B0B0B0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="ðŸ—–"
                        Width="44"
                        Height="36"
                        Margin="0,0,10,0"
                        Background="#3A3B40"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Open FTP Explorer in a new window"
                        Click="DetachFtpExplorerPage_Click"/>
                <Button Content="âš™ Manage Connections"
                        Padding="18,8"
                        Background="#333842"
                        Foreground="#E0E0E0"
                        BorderBrush="#4B8FE2"
                        Click="ManageConnections_Click"/>
            </StackPanel>
        </Grid>

        <!-- Controls -->
        <Border Grid.Row="1"
                Background="#2B2B2B"
                CornerRadius="10"
                Padding="18"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
                            <TextBlock Text="Connection Profile" FontSize="13" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                            <ComboBox x:Name="ConnectionsCombo"
                                      Height="32"
                                      Background="#363636"
                                      Foreground="White"
                                      BorderBrush="#4B8FE2"
                                      Padding="6,0"
                                      SelectionChanged="ConnectionsCombo_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Border Width="26"
                                                    Height="26"
                                                    CornerRadius="6"
                                                    Background="{Binding ProtocolBadgeColor}"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="{Binding ProtocolBadgeText}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Host}" FontSize="11" Foreground="#A0A0A0"/>
                                                <TextBlock Text="Project default"
                                                           FontSize="10"
                                                           Foreground="#9CFFCB"
                                                           Margin="0,2,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsProjectDefault}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock x:Name="ConnectionSummaryText" FontSize="12" Foreground="#8DD1FF" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Button x:Name="ConnectButton"
                                    Content="ðŸ”— Connect"
                                    Padding="18,8"
                                    Background="#4B8FE2"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="ConnectButton_Click"
                                    Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#5AA0FF"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#3169C2"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="border" Property="Opacity" Value="1"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <CheckBox x:Name="ShowHiddenCheckBox"
                                      Content="Show hidden"
                                      Foreground="#D0D0D0"
                                      Checked="ShowHiddenCheckBox_Changed"
                                      Unchecked="ShowHiddenCheckBox_Changed"
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="MappingSummaryText"
                                       Foreground="#FFC46B"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Current Path" FontSize="13" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                        <TextBox x:Name="PathTextBox"
                                 Height="34"
                                 IsReadOnly="True"
                                 Background="#1D1D1D"
                                 BorderBrush="#3A3A3A"
                                 Foreground="#E0E0E0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="â¬† Up"
                            Margin="10,20,0,0"
                            Padding="20,6"
                            Background="#4B8FE2"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Go back to the parent directory"
                            Click="UpButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#6AA8FF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#3C73B7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="2"
                            Content="ðŸ”„ Refresh"
                            Margin="10,20,0,0"
                            Padding="20,6"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderThickness="0"
                            Click="RefreshButton_Click"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Download to" FontSize="13" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                        <TextBox x:Name="DownloadPathTextBox"
                                 Height="34"
                                 Background="#1D1D1D"
                                 BorderBrush="#3A3A3A"
                                 Foreground="#E0E0E0"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Browse..."
                            Margin="10,20,0,0"
                            Padding="18,6"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BrowseDownloadPath_Click"/>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,20,0,0">
                        <Button x:Name="DownloadSelectedButton"
                                Content="â¬‡ Download Selected"
                                Padding="18,8"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="DownloadSelectedButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="#12B36B"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#21D57F"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#0D8B52"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="#355043"/>
                                                        <Setter Property="Foreground" Value="#B7C4BC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="PauseDownloadButton"
                                Content="Pause"
                                Margin="8,0,0,0"
                                Padding="20,6"
                                Background="#4B8FE2"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                BorderThickness="0"
                                IsEnabled="False"
                                Click="PauseDownloadButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#6AA8FF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#3C73B7"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.35"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                    <TextBlock x:Name="DownloadProgressText"
                               Text="Waiting for download..."
                               FontSize="12"
                               Foreground="#B0B0B0"
                               Margin="0,0,0,4"/>
                    <ProgressBar x:Name="DownloadProgressBar"
                                 Height="8"
                                 Value="0"
                                 Minimum="0"
                                 Maximum="100"
                                 Background="#3A3A3A"
                                 Foreground="#00C853"
                                 Margin="0,0,0,4"/>
                    <TextBlock x:Name="DownloadProgressDetailText"
                               Text=""
                               FontSize="11"
                               Foreground="#8DD1FF"/>
                </StackPanel>

                <TextBlock x:Name="StatusText"
                           Grid.Row="4"
                           Margin="0,15,0,0"
                           FontSize="13"
                           Foreground="#CCCCCC"
                           Text="Select a connection to begin."/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Quick select:" Foreground="#A0A0A0" FontSize="13" VerticalAlignment="Center"/>
            <CheckBox x:Name="SelectAllCheckBox"
                      Content="Select all"
                      Margin="12,0,0,0"
                      Foreground="#E0E0E0"
                      Cursor="Hand"
                      Click="SelectAllCheckBox_Click"/>
            <CheckBox x:Name="ClearSelectionCheckBox"
                      Content="Clear selection"
                      Margin="12,0,0,0"
                      Foreground="#E0E0E0"
                      Cursor="Hand"
                      Click="ClearSelectionCheckBox_Click"/>
        </StackPanel>

        <!-- Explorer -->
        <ListView x:Name="EntriesListView"
                  Grid.Row="3"
                  Background="#1F1F1F"
                  BorderThickness="0"
                  Margin="0,0,0,15"
                  MouseDoubleClick="EntriesListView_MouseDoubleClick"
                  PreviewMouseRightButtonDown="EntriesListView_PreviewMouseRightButtonDown">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Download" Click="DownloadMenuItem_Click"/>
                    <MenuItem Header="Rename" Click="RenameMenuItem_Click"/>
                    <MenuItem Header="Delete" Click="DeleteMenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Select" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsParentLink}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" Width="260">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,8,0" Foreground="{Binding IconColor}"/>
                                    <TextBlock Text="{Binding Name}" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Type" Width="70" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Size" Width="100" DisplayMemberBinding="{Binding SizeDisplay}"/>
                    <GridViewColumn Header="Modified" Width="160" DisplayMemberBinding="{Binding ModifiedDisplay}"/>
                    <GridViewColumn Header="Owner" Width="100" DisplayMemberBinding="{Binding Owner}"/>
                    <GridViewColumn Header="Group" Width="100" DisplayMemberBinding="{Binding Group}"/>
                    <GridViewColumn Header="Permissions" Width="120" DisplayMemberBinding="{Binding Permissions}"/>
                    <GridViewColumn Header="Actions" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Download"
                                        Padding="10,4"
                                        FontSize="12"
                                        Background="#00ACC1"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Tag="{Binding}"
                                        Click="DownloadRowButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsParentLink}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Logs -->
        <Border Grid.Row="4"
                Background="#2B2B2B"
                CornerRadius="8"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ“‹" FontSize="18" Margin="0,0,10,0"/>
                    <TextBlock Text="Log" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <Button Content="ðŸ—‘ Clear"
                            Margin="15,0,0,0"
                            Padding="12,2"
                            Background="#3A3A3A"
                            Foreground="#CCCCCC"
                            BorderThickness="0"
                            Click="ClearLog_Click"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="0,0,0,40">
                    <TextBox x:Name="LogTextBox"
                             Background="#151515"
                             Foreground="#8AE99C"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="10"
                             Margin="0,0,0,30"
                             VerticalContentAlignment="Top"
                             IsReadOnly="True"
                             TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>

