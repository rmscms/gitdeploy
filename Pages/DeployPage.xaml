<Page x:Class="GitDeployPro.Pages.DeployPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      Title="DeployPage"
      Background="#202020">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
            <TextBlock Text="ðŸš€" FontSize="40" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="White"/>
            <TextBlock Text="Deploy Project" 
                      FontSize="34" 
                      FontWeight="Bold" 
                      Foreground="White"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Branch Selection Area -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>

            <!-- Source Branch -->
            <Border Grid.Column="0" Background="#2B2B2B" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Source Branch (Local):" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                    <ComboBox x:Name="SourceBranchComboBox" 
                             Height="40" 
                             FontSize="14"
                             Background="#3A3A3A"
                             Foreground="White"
                             BorderBrush="#0078D4"
                             BorderThickness="1"
                             Padding="10,0"
                             SelectionChanged="BranchComboBox_SelectionChanged">
                        <ComboBoxItem Content="ðŸŒ¿ master" IsSelected="True"/>
                        <ComboBoxItem Content="ðŸ”§ development"/>
                        <ComboBoxItem Content="ðŸ§ª beta"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Arrow Icon -->
            <TextBlock Grid.Column="1" Text="âžœ" 
                      FontSize="24" 
                      Foreground="#888888" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>

            <!-- Target Branch -->
            <Border Grid.Column="2" Background="#2B2B2B" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Target Branch (Local):" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                    <ComboBox x:Name="TargetBranchComboBox" 
                             Height="40" 
                             FontSize="14"
                             Background="#3A3A3A"
                             Foreground="White"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             Padding="10,0">
                        <ComboBoxItem Content="ðŸš€ production" IsSelected="True"/>
                        <ComboBoxItem Content="ðŸŒ staging"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Action Button (Commit / Compare / Push) -->
            <Grid Grid.Column="4">
                <StackPanel>
                    <Button x:Name="ActionButton"
                            Content="ðŸ” COMPARE" 
                            Height="76" 
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#E65100"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ActionButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#EF6C00"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Border x:Name="DeployPushBadge"
                            Visibility="Collapsed"
                            Background="#2F2A1C"
                            CornerRadius="6"
                            Padding="8"
                            Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â˜ï¸" FontSize="14" Margin="0,0,6,0" Foreground="#FFD54F"/>
                            <TextBlock x:Name="DeployPushBadgeText"
                                      Text="Pending push"
                                      FontSize="12"
                                      Foreground="#FFD54F"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Actions Bar (Deploy Button hidden initially) -->
        <Border Grid.Row="2" 
               Background="#2B2B2B" 
               CornerRadius="8" 
               Padding="15"
               Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Changed Files" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            
                            <CheckBox x:Name="SelectAllCheckBox"
                                     Content="Select All"
                                     FontSize="13"
                                     Foreground="#AAAAAA"
                                     VerticalAlignment="Center"
                                     IsChecked="True"
                                     Click="SelectAll_Click"/>
                        </StackPanel>

                        <Button Grid.Column="3" 
                               x:Name="DeployButton"
                               Content="ðŸš€ START DEPLOY" 
                               Width="180"
                               Height="40"
                               FontSize="14"
                               FontWeight="Bold"
                               Background="#0078D4"
                               Foreground="White"
                               BorderThickness="0"
                               Cursor="Hand"
                               IsEnabled="False"
                               Click="DeployButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                        <Setter Property="Foreground" Value="#888888"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <TextBlock x:Name="StatusText" 
                              Text="Ready to compare changes..." 
                              FontSize="14" 
                              Foreground="#AAAAAA"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Files List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FilesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3A3A3A" 
                                        CornerRadius="6" 
                                        Padding="12,10"
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,15,0">
                                            <CheckBox.LayoutTransform>
                                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                            </CheckBox.LayoutTransform>
                                        </CheckBox>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“„" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="13" 
                                                      Foreground="#E0E0E0"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" 
                                                Background="{Binding StatusColor}" 
                                                CornerRadius="3" 
                                                Padding="6,2"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}" 
                                                      FontSize="11" 
                                                      FontWeight="Bold" 
                                                      Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Progress Bar -->
        <Border Grid.Row="3" 
               Background="#2B2B2B" 
               CornerRadius="8" 
               Padding="15"
               Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="ProgressText" 
                          Text="Waiting..." 
                          FontSize="13" 
                          Foreground="#CCCCCC"
                          Margin="0,0,0,8"/>
                <ProgressBar x:Name="DeployProgressBar" 
                            Height="8" 
                            Value="0" 
                            Maximum="100"
                            Background="#3A3A3A"
                            Foreground="#0078D4"
                            BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Logs -->
        <Border Grid.Row="4" 
               Background="#2B2B2B" 
               CornerRadius="8" 
               Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ“‹" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Deployment Logs" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <Button Content="ðŸ—‘ï¸ Clear Logs" 
                           Margin="15,0,0,0" 
                           Height="28"
                           Padding="12,0"
                           Background="#3A3A3A"
                           Foreground="#CCCCCC"
                           FontSize="11"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="ClearLogs_Click"/>
                </StackPanel>

                <Border Grid.Row="1" 
                       Background="#1A1A1A" 
                       CornerRadius="6" 
                       Padding="12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 x:Name="LogScrollViewer">
                        <TextBlock x:Name="LogTextBlock" 
                                  FontFamily="Consolas" 
                                  FontSize="12" 
                                  Foreground="#00FF88"
                                  TextWrapping="Wrap"
                                  Text="Waiting for deployment..."/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
