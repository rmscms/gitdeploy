<Page x:Class="GitDeployPro.Pages.TerminalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GitDeployPro.Pages"
      xmlns:controls="clr-namespace:GitDeployPro.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TerminalPage">

    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SessionManagerColumn" Width="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="Auto"/> <!-- Presets -->
            <RowDefinition Height="*"/>    <!-- Terminal -->
        </Grid.RowDefinitions>

        <!-- Session Manager Panel (Left Side) -->
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" 
                Background="#252526" BorderThickness="0,0,1,0" BorderBrush="#3E3E42">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Session Manager Header -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
                    <TextBlock Text="ðŸ“ Session Manager" FontSize="16" FontWeight="Bold" Foreground="White"/>
                </Border>
                
                <!-- Session Manager Content -->
                <controls:SessionManagerControl x:Name="SessionManagerContent" Grid.Row="1"/>
            </Grid>
        </Border>
        
        <!-- Resizer -->
        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" 
                Background="#3E3E42" Cursor="SizeWE"
                MouseLeftButtonDown="Resizer_MouseLeftButtonDown"
                MouseLeftButtonUp="Resizer_MouseLeftButtonUp"
                MouseMove="Resizer_MouseMove"/>
        
        <!-- Toolbar -->
        <Border Grid.Column="2" Grid.Row="0" Background="#252526" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0" >
                <TextBlock Text="Active Terminals:" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                <TextBlock x:Name="ActiveTerminalsCount" Text="0" Foreground="#4EC9B0" FontWeight="Bold" VerticalAlignment="Center" Margin="6,0,12,0"/>
                
                <Button x:Name="OpenLocalTerminalButton"
                        Content="ðŸ–¥ Local Terminal"
                        Height="28"
                        Padding="10,0"
                        Background="#3F8EF7"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OpenLocalTerminalButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Command Presets -->
        <Border Grid.Column="2" Grid.Row="1" Background="#222326" Padding="12" BorderBrush="#1F1F1F" BorderThickness="0,0,0,1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PresetComboBox"
                              Grid.Column="0"
                              Height="32"
                              Background="#2F3035"
                              Foreground="White"
                              DisplayMemberPath="Title"
                              SelectedValuePath="Id"
                              Margin="0,0,12,0"/>
                    <Button Content="Insert"
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            Padding="16,4"
                            Background="#3F8EF7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="UsePreset_Click"/>
                    <Button Content="Delete"
                            Grid.Column="2"
                            Margin="0,0,8,0"
                            Padding="16,4"
                            Background="#3A3B40"
                            Foreground="#FF8A80"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DeletePreset_Click"/>
                    <CheckBox x:Name="BroadcastAllCheckBox"
                              Grid.Column="3"
                              Content="Send to all open terminals"
                              Foreground="#9FA8DA"
                              VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="PresetTitleBox"
                             mah:TextBoxHelper.Watermark="Title"
                             Grid.Column="0"
                             Margin="0,0,12,0"/>
                    <TextBox x:Name="PresetCommandBox"
                             mah:TextBoxHelper.Watermark="Command"
                             Grid.Column="1"
                             Margin="0,0,12,0"/>
                    <Button Content="Save Preset"
                            Grid.Column="2"
                            Padding="16,4"
                            Background="#3F8EF7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="AddPresetButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Dynamic terminals grid -->
        <Grid x:Name="TerminalsGrid" Grid.Column="2" Grid.Row="2" Background="#1E1E1E"/>
    </Grid>
</Page>