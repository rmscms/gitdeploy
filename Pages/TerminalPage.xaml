<Page x:Class="GitDeployPro.Pages.TerminalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GitDeployPro.Pages"
      xmlns:controls="clr-namespace:GitDeployPro.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TerminalPage">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="Auto"/> <!-- Presets -->
            <RowDefinition Height="*"/>    <!-- Terminal -->
        </Grid.RowDefinitions>

        <!-- SSH Connection Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="SSH Connection:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <TextBox x:Name="SearchBox" Width="120" Height="28" Margin="0,0,8,0"
                         mah:TextBoxHelper.Watermark="ðŸ” Search..."
                         Background="#333337" Foreground="White"
                         TextChanged="SearchBox_TextChanged"/>
                
                <ComboBox x:Name="SshProfilesCombo" Width="250" Height="28" 
                          DisplayMemberPath="DisplayName"
                          Background="#333337" Foreground="White"
                          SelectionChanged="SshProfilesCombo_SelectionChanged"
                          IsEditable="False">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#333337"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>

                <Button Content="ðŸ”Œ Quick Connect" Margin="10,0,0,0" Height="28" Padding="10,0"
                        Style="{StaticResource ModernButtonStyle}" Background="#007ACC"
                        Click="QuickConnect_Click"/>
                
                <Button Content="âš™ï¸ Manage Profiles" Margin="10,0,0,0" Height="28" Padding="10,0"
                        Style="{StaticResource ModernButtonStyle}" Background="#3E3E42"
                        Click="ManageProfiles_Click"/>

                <Button Content="ðŸ—– Pop-out" Margin="10,0,0,0" Height="28" Padding="10,0"
                        Background="#333333" Foreground="#F0F0F0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="DetachTerminalPage_Click"/>
            </StackPanel>
        </Border>

        <!-- Command Presets -->
        <Border Grid.Row="1" Background="#222326" Padding="12" BorderBrush="#1F1F1F" BorderThickness="0,0,0,1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PresetComboBox"
                              Grid.Column="0"
                              Height="32"
                              Background="#2F3035"
                              Foreground="White"
                              DisplayMemberPath="Title"
                              SelectedValuePath="Id"
                              Margin="0,0,12,0"/>
                    <Button Content="Insert"
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            Padding="16,4"
                            Background="#3F8EF7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="UsePreset_Click"/>
                    <Button Content="Delete"
                            Grid.Column="2"
                            Margin="0,0,8,0"
                            Padding="16,4"
                            Background="#3A3B40"
                            Foreground="#FF8A80"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DeletePreset_Click"/>
                    <CheckBox x:Name="BroadcastAllCheckBox"
                              Grid.Column="3"
                              Content="Send to all open terminals"
                              Foreground="#9FA8DA"
                              VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="PresetTitleBox"
                             mah:TextBoxHelper.Watermark="Title"
                             Grid.Column="0"
                             Margin="0,0,12,0"/>
                    <TextBox x:Name="PresetCommandBox"
                             mah:TextBoxHelper.Watermark="Command"
                             Grid.Column="1"
                             Margin="0,0,12,0"/>
                    <Button Content="Save Preset"
                            Grid.Column="2"
                            Padding="16,4"
                            Background="#3F8EF7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="AddPresetButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <controls:TerminalControl x:Name="Terminal" Grid.Row="2"/>
    </Grid>
</Page>