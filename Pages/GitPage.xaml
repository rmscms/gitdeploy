<Page x:Class="GitDeployPro.Pages.GitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Git &amp; GitHub Integration"
      Background="#202020">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="ðŸ±" FontSize="40" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="White"/>
                <TextBlock Text="GitHub Integration" 
                          FontSize="34" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ—–"
                        Width="48"
                        Height="42"
                        Background="#333333"
                        Foreground="#EEEEEE"
                        BorderThickness="1"
                        BorderBrush="#444444"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Click="DetachGitPage_Click"/>

                <Button x:Name="CloneRepoButton"
                        Height="42"
                        Padding="20,0"
                        Background="#333333"
                        Foreground="White"
                        BorderThickness="1"
                        BorderBrush="#444444"
                        Cursor="Hand"
                        Click="CloneRepoButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”—" FontSize="16" Margin="0,0,12,0" Foreground="#4FC3F7"/>
                            <TextBlock Text="Clone / Connect" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3E3E3E"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Remote Info & Actions -->
        <Border Grid.Row="1" Background="#2B2B2B" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Remote Repository (origin):" Foreground="#AAAAAA" FontSize="13" Margin="0,0,0,5"/>
                    <TextBlock x:Name="RemoteUrlText" Text="Loading..." Foreground="#4FC3F7" FontSize="14" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                    
                    <TextBlock x:Name="BranchText" Text="Current Branch: -" Foreground="#BBBBBB" FontSize="13" Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PullButton"
                            Content="â¬‡ Pull" 
                            Width="100" Height="40"
                            Margin="0,0,10,0"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="PullButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="PushButton"
                            Content="â¬† Push" 
                            Width="100" Height="40"
                            Background="#0078D4"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="PushButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tags Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tags List -->
            <Border Grid.Column="0" Background="#2B2B2B" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ·ï¸" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Tags" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <ListBox x:Name="TagsListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="White" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Button x:Name="PushTagsButton"
                            Grid.Row="2"
                            Content="â¬† Push All Tags" 
                            Height="36"
                            Margin="0,15,0,0"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Click="PushTagsButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Create Tag -->
            <Border Grid.Column="2" Background="#2B2B2B" CornerRadius="10" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="âž•" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Create New Tag" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Tag Name (e.g. v1.0.0):" Foreground="#AAAAAA" FontSize="13" Margin="0,0,0,6"/>
                    <TextBox x:Name="TagNameBox" 
                            Height="38" 
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderBrush="#555555"
                            BorderThickness="1"
                            Padding="10"
                            FontSize="13"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Description (Message):" Foreground="#AAAAAA" FontSize="13" Margin="0,0,0,6"/>
                    <TextBox x:Name="TagMessageBox" 
                            Height="80" 
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderBrush="#555555"
                            BorderThickness="1"
                            Padding="10"
                            FontSize="13"
                            Margin="0,0,0,20"/>

                    <Button x:Name="CreateTagButton"
                            Content="Create &amp; Push Tag" 
                            Height="45"
                            Background="#2E7D32"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="CreateTagButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

