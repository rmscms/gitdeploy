<Window x:Class="GitDeployPro.Windows.RemoteBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Browser" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#202020" 
            CornerRadius="10" 
            BorderBrush="#3F3F3F" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‚" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Select Remote Folder" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Content="âœ•" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="#888888" 
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </Grid>

            <!-- Current Path -->
            <TextBox Grid.Row="1" 
                     x:Name="PathTextBox"
                     Height="35" 
                     Text="/" 
                     Background="#333333"
                     Foreground="White"
                     BorderBrush="#555555"
                     BorderThickness="1"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,10"
                     IsReadOnly="True"/>

            <!-- File List -->
            <Border Grid.Row="2" Background="#2B2B2B" CornerRadius="8" Padding="10">
                <ListBox x:Name="FileListBox" 
                         Background="Transparent" 
                         BorderThickness="0"
                         Foreground="White"
                         MouseDoubleClick="FileListBox_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="{Binding Icon}" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancel" 
                        Height="40" 
                        Width="100" 
                        Margin="0,0,10,0"
                        Background="Transparent"
                        Foreground="#CCCCCC"
                        BorderThickness="1"
                        BorderBrush="#555555"
                        FontSize="14"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Select" 
                        Height="40" 
                        Width="100"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="Select_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

