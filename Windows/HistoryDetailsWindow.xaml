<Window x:Class="GitDeployPro.Windows.HistoryDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deployment Details" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#202020" 
            CornerRadius="10" 
            BorderBrush="#3F3F3F" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‹" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Deployment Details" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Content="âœ•" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="#888888" 
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </Grid>

            <!-- Info Summary -->
            <Border Grid.Row="1" Background="#2B2B2B" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Status" FontSize="13" Foreground="#888888" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="StatusIcon" Text="âœ…" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" Text="Success" FontSize="16" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Branch" FontSize="13" Foreground="#888888" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BranchText" Text="master" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Date" FontSize="13" Foreground="#888888" Margin="0,0,0,5"/>
                        <TextBlock x:Name="DateText" Text="2024/11/27 14:30" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- File List -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Changed Files (12)" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Foreground="White"
                          Margin="0,0,0,15"/>

                <Border Grid.Row="1" Background="#2B2B2B" CornerRadius="8" Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="FilesListContainer">
                            <!-- Items will be added dynamically -->
                            <TextBlock Text="Loading files..." Foreground="#AAAAAA"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Rollback to this version" 
                        Height="45" 
                        Padding="20,0"
                        Background="#2B2B2B"
                        Foreground="#E57373"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Margin="0,0,15,0"
                        Click="Rollback_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Close" 
                        Height="45" 
                        Width="100"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

