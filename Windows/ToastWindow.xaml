<Window x:Class="GitDeployPro.Windows.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="Transparent"
        Width="320"
        Height="120"
        Topmost="True"
        Focusable="False">
    <Border CornerRadius="12"
            Background="#FF1E1F23"
            BorderBrush="#FF3D4147"
            BorderThickness="1"
            Padding="18">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="0" Color="#99000000"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock x:Name="TitleText"
                       Text="Backup completed"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"/>
            <TextBlock x:Name="MessageText"
                       Text="digitalpart-backup finished successfully."
                       Margin="0,8,0,0"
                       Foreground="#C7C7C7"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>

