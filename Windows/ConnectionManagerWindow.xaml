<mah:MetroWindow x:Class="GitDeployPro.Windows.ConnectionManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:GitDeployPro.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Deployment - Connection Manager" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#252526" Foreground="#F1F1F1"
        ResizeMode="CanResizeWithGrip"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        WindowTitleBrush="#252526"
        NonActiveWindowTitleBrush="#2D2D30"
        BorderThickness="1"
        BorderBrush="#3E3E42">

    <Window.Resources>
        <!-- Removed problematic ObjectDataProvider and Converter -->
        
        <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#434346"/>
        </Style>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource MahApps.Styles.PasswordBox}">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#434346"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource MahApps.Styles.CheckBox}">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar: List of Connections -->
        <Border Grid.Column="0" Background="#2D2D30" BorderThickness="0,0,1,0" BorderBrush="#3E3E42">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Connections" Foreground="#999999" Margin="15,15,0,10" FontWeight="Bold"/>

                <ListBox x:Name="ConnectionsList" Grid.Row="1" Background="Transparent" BorderThickness="0"
                         SelectionMode="Single" SelectionChanged="ConnectionsList_SelectionChanged"
                         Margin="0,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5" Background="Transparent">
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Duplicate" Click="DuplicateConnection_Click">
                                            <MenuItem.Icon>
                                                <TextBlock Text="ðŸ“„"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Remove" Click="DeleteConnection_Context_Click">
                                            <MenuItem.Icon>
                                                <TextBlock Text="ðŸ—‘ï¸"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Grid.ContextMenu>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Badge -->
                                <Border Grid.Column="0" Width="24" Height="24" CornerRadius="4" Margin="0,0,10,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#4CAF50"/> <!-- Default: FTP (Green) -->
                                            <Style.Triggers>
                                                <!-- SSH (Purple) -->
                                                <DataTrigger Binding="{Binding UseSSH}" Value="True">
                                                    <Setter Property="Background" Value="#9C27B0"/>
                                                </DataTrigger>
                                                <!-- Database badge (Blue) -->
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.MySQL}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.MariaDB}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.PostgreSQL}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.SQLServer}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.MongoDB}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.Redis}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.SQLite}">
                                                    <Setter Property="Background" Value="#1E88E5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <TextBlock Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="F"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding UseSSH}" Value="True">
                                                        <Setter Property="Text" Value="S"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.MySQL}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.MariaDB}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.PostgreSQL}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.SQLServer}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.MongoDB}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.Redis}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DbType}" Value="{x:Static local:DatabaseType.SQLite}">
                                                        <Setter Property="Text" Value="D"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <!-- Name -->
                                <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#094771"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3E3E40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Toolbar (Add/Remove) -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Background="#252526" Height="40">
                    <Button x:Name="AddButton" Content="âž•" Width="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Click="AddButton_Click" ToolTip="Add New Connection"/>
                    <Button x:Name="DeleteButton" Content="âž–" Width="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Click="DeleteButton_Click" ToolTip="Remove Connection"/>
                    <Button Content="ðŸ“¥ Import Navicat"
                            Margin="15,0,0,0"
                            Padding="12,0"
                            Background="Transparent"
                            Foreground="#4EC9B0"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Import Navicat export (*.ncx / *.xml)"
                            Click="ImportNavicatButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel: Details Form -->
        <Grid Grid.Column="1" x:Name="EditPanel" IsEnabled="False" Background="#1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Name Header -->
                <RowDefinition Height="*"/>    <!-- Tabs -->
                <RowDefinition Height="Auto"/> <!-- Footer Actions -->
            </Grid.RowDefinitions>

            <!-- Name Header -->
            <Border Grid.Row="0" Padding="25,20,25,15" BorderThickness="0,0,0,1" BorderBrush="#333333">
                <StackPanel>
                    <TextBlock Text="Connection Name:" Foreground="#999999" Margin="0,0,0,5" FontSize="12"/>
                    <TextBox x:Name="NameBox" FontSize="18" FontWeight="Bold" Padding="8" BorderThickness="0,0,0,1" Background="Transparent"/>
                </StackPanel>
            </Border>

            <!-- Tabs -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="15">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid>
                                        <Border x:Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Background="Transparent">
                                            <ContentPresenter x:Name="ContentSite"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            ContentSource="Header"
                                                            Margin="12,2,12,2"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- SSH/FTP Tab -->
                <TabItem Header="Remote Host (SSH/FTP)">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                        <StackPanel>
                            <!-- Type Selection -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Protocol:"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <RadioButton x:Name="FtpRadio" Content="FTP" GroupName="Protocol" IsChecked="True" Foreground="White" Margin="0,0,20,0"/>
                                    <RadioButton x:Name="SftpRadio" Content="SFTP (SSH)" GroupName="Protocol" Foreground="White"/>
                                </StackPanel>
                            </Grid>

                            <!-- Host & Port -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Host / IP:"/>
                                <TextBox x:Name="HostBox" Grid.Column="1" Margin="0,0,15,0"/>
                                <Label Grid.Column="2" Content="Port:"/>
                                <TextBox x:Name="PortBox" Grid.Column="3" TextAlignment="Center"/>
                            </Grid>

                            <!-- Credentials -->
                            <GroupBox Header="Authentication" BorderBrush="#434346" Foreground="#CCCCCC" Margin="0,0,0,20" Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Username:"/>
                                        <TextBox x:Name="UserBox" Grid.Column="1"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Password:"/>
                                        <PasswordBox x:Name="PassBox" Grid.Column="1"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- Root Path & URL -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Content="Root Path:"/>
                                <TextBox x:Name="RootPathBox" Grid.Row="0" Grid.Column="1"/>
                                <Button Grid.Row="0" Grid.Column="2" Content="ðŸ“ Browse" Margin="10,0,0,0" 
                                        Style="{StaticResource ModernButtonStyle}" Height="30" Padding="10,0"
                                        Click="BrowseButton_Click"/>

                                <Label Grid.Row="2" Content="Web URL:"/>
                                <TextBox x:Name="WebUrlBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                         ToolTip="Example: http://mysite.com"/>
                            </Grid>

                            <!-- Advanced Options -->
                            <Expander Header="Advanced Options" Foreground="#CCCCCC" Margin="0,10,0,0">
                                <StackPanel Margin="25,15,0,0">
                                    <CheckBox x:Name="PassiveModeCheck" Content="Passive mode" IsChecked="True" Margin="0,0,0,10"/>
                                    <CheckBox x:Name="ShowHiddenCheck" Content="Show hidden files (.env, .htaccess, etc.)" IsChecked="True" FontWeight="Bold" Foreground="#4EC9B0" Margin="0,0,0,10"/>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Keep Alive (sec):" Margin="-5,0,10,0"/>
                                        <TextBox x:Name="KeepAliveBox" Width="80" Text="300" TextAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Test Connection Button -->
                            <Button Content="âš¡ Test Remote Connection" 
                                    Margin="0,30,0,0" 
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#333333"
                                    Click="TestButton_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Database Tab -->
                <TabItem Header="Database ðŸ›¢ï¸">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                        <StackPanel>
                            <Border Background="#2D2D30" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                                <TextBlock Text="â„¹ï¸ Database connections are tunneled securely through the SSH connection defined in the first tab. No need to open database ports to the public internet." 
                                           TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="13"/>
                            </Border>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Database Type:"/>
                                <ComboBox x:Name="DbTypeCombo" Grid.Column="1"/>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Host:" ToolTip="Usually 127.0.0.1 (relative to the server)"/>
                                <TextBox x:Name="DbHostBox" Grid.Column="1" Text="127.0.0.1" Margin="0,0,15,0"/>
                                <Label Grid.Column="2" Content="Port:"/>
                                <TextBox x:Name="DbPortBox" Grid.Column="3" Text="3306" TextAlignment="Center"/>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Database Name:"/>
                                <TextBox x:Name="DbNameBox" Grid.Column="1" ToolTip="The name of the database schema"/>
                            </Grid>

                            <GroupBox Header="Database Authentication" BorderBrush="#434346" Foreground="#CCCCCC" Margin="0,0,0,20" Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Username:"/>
                                        <TextBox x:Name="DbUserBox" Grid.Column="1" Text="root"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Password:"/>
                                        <PasswordBox x:Name="DbPassBox" Grid.Column="1"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <Button x:Name="TestDatabaseButton"
                                    Content="ðŸ”Œ Test Database Connection" 
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#2E7D32"
                                    Click="TestDatabase_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Mappings Tab -->
                <TabItem Header="Path Mappings">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Route a local folder (relative to the project root) to a remote directory. The first mapping becomes the Direct Upload root."
                                   TextWrapping="Wrap"
                                   Foreground="#AAAAAA"
                                   Margin="0,0,0,10"/>

                        <Border Grid.Row="1" BorderBrush="#333" BorderThickness="1" CornerRadius="6" Background="#1f1f1f">
                            <ListView x:Name="PathMappingsList"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      SelectionChanged="PathMappingsList_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Local Folder" Width="200" DisplayMemberBinding="{Binding LocalPath}"/>
                                        <GridViewColumn Header="Remote Path" Width="240" DisplayMemberBinding="{Binding RemotePath}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                            <StackPanel Width="220" Margin="0,0,10,0">
                                <TextBlock Text="Local Folder (relative, e.g. site)" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBox x:Name="LocalMappingTextBox" mah:TextBoxHelper.Watermark="site" />
                            </StackPanel>
                            <StackPanel Width="260" Margin="0,0,10,0">
                                <TextBlock Text="Remote Path (e.g. /public_html)" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBox x:Name="RemoteMappingTextBox" mah:TextBoxHelper.Watermark="/public_html"/>
                            </StackPanel>
                            <Button Content="Save Mapping"
                                    Width="130"
                                    Margin="0,22,10,0"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#007ACC"
                                    Click="SaveMappingButton_Click"/>
                            <Button Content="Delete"
                                    Width="90"
                                    Margin="0,22,0,0"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#C62828"
                                    Click="DeleteMappingButton_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Footer Actions -->
            <Border Grid.Row="2" Background="#252526" BorderThickness="0,1,0,0" BorderBrush="#3E3E42" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save Connection" Width="140" Height="35" Margin="0,0,15,0" 
                            Style="{StaticResource ModernButtonStyle}" Background="#007ACC"
                            Click="SaveButton_Click"/>
                    <Button Content="Cancel" Width="100" Height="35" 
                            Style="{StaticResource ModernButtonStyle}" Background="#3E3E42"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Overlay for Empty State (Now controlled by code-behind) -->
        <Grid x:Name="EmptyStateOverlay" Grid.Column="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5">
                <TextBlock Text="â¬…ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Select a connection or create a new one" 
                           FontSize="18"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>