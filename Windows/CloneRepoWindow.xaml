<Window x:Class="GitDeployPro.Windows.CloneRepoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clone Repository" Height="520" Width="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#202020"
            CornerRadius="10"
            BorderBrush="#3F3F3F"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ðŸ”—" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Clone or Connect Repository"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Build the remote URL automatically and pick a destination."
                                   Foreground="#AAAAAA"
                                   FontSize="13"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="âœ•"
                        Grid.Column="1"
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        Foreground="#CCCCCC"
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Repository (owner/name or full URL)"
                           Foreground="#E0E0E0"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBox x:Name="RepoInputTextBox"
                         Height="40"
                         Background="#3A3A3A"
                         Foreground="#FFFFFF"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         Padding="10"
                         FontSize="13"
                         Margin="0,6,0,2"
                         TextChanged="RepoInputTextBox_TextChanged"/>
                <TextBlock Text="Example: rmscms/gitdeploy or https://github.com/rmscms/gitdeploy.git"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,16"/>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Host" Foreground="#E0E0E0" FontSize="13" FontWeight="SemiBold"/>
                        <TextBox x:Name="HostTextBox"
                                 Height="36"
                                 Background="#2F2F2F"
                                 Foreground="#FFFFFF"
                                 BorderBrush="#555555"
                                 BorderThickness="1"
                                 Padding="10,0"
                                 FontSize="13"
                                 TextChanged="HostTextBox_TextChanged"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Protocol" Foreground="#E0E0E0" FontSize="13" FontWeight="SemiBold"/>
                        <ComboBox x:Name="ProtocolComboBox"
                                  Height="36"
                                  Background="#2F2F2F"
                                  Foreground="White"
                                  BorderBrush="#555555"
                                  BorderThickness="1"
                                  SelectionChanged="ProtocolComboBox_SelectionChanged">
                            <ComboBoxItem Content="HTTPS" IsSelected="True"/>
                            <ComboBoxItem Content="SSH"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Remote URL Preview"
                           Foreground="#E0E0E0"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBox x:Name="PreviewUrlTextBox"
                         Height="40"
                         Background="#1E1E1E"
                         Foreground="#4FC3F7"
                         BorderBrush="#333333"
                         BorderThickness="1"
                         Padding="10"
                         FontSize="13"
                         Margin="0,6,0,16"
                         IsReadOnly="True"/>

                <TextBlock Text="Local Target Folder"
                           Foreground="#E0E0E0"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <Grid Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="LocalPathTextBox"
                             Grid.Column="0"
                             Height="40"
                             Background="#3A3A3A"
                             Foreground="#FFFFFF"
                             BorderBrush="#555555"
                             BorderThickness="1"
                             Padding="10"
                             FontSize="13"
                             TextChanged="LocalPathTextBox_TextChanged"/>
                    <Button Content="Use Default"
                            Grid.Column="1"
                            Height="40"
                            Margin="10,0,0,0"
                            Padding="12,0"
                            Background="#2B2B2B"
                            Foreground="#FFFFFF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="UseDefaultPath_Click"/>
                    <Button Content="Browse"
                            Grid.Column="2"
                            Height="40"
                            Margin="10,0,0,0"
                            Padding="20,0"
                            Background="#2E7D32"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BrowseLocalButton_Click"/>
                </Grid>
                <TextBlock Text="We will create this folder if needed."
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel"
                        Height="42"
                        Width="110"
                        Margin="0,0,15,0"
                        Background="Transparent"
                        Foreground="#CCCCCC"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="Close_Click"/>
                <Button x:Name="CloneButton"
                        Content="ðŸš€ Clone Now"
                        Height="42"
                        Width="150"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloneButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

