<Window x:Class="GitDeployPro.Windows.CommitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:GitDeployPro.Controls"
        Title="Review &amp; Commit" Height="760" Width="1150"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#202020" 
            CornerRadius="10" 
            BorderBrush="#3F3F3F" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Uncommitted Changes" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Content="âœ•" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="#888888" 
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </Grid>

            <!-- File List -->
            <Border Grid.Row="1" Background="#2B2B2B" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Pending Changes: " FontSize="14" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="TotalChangesText" Text="0 Files" FontSize="14" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.1*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="1.3*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="FilesListBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     SelectionChanged="FilesListBox_SelectionChanged"
                                     MouseDoubleClick="FilesListBox_MouseDoubleClick">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1A1A1A" 
                                                CornerRadius="4" 
                                                Padding="10" 
                                                Margin="0,0,0,8"
                                                BorderBrush="#333333"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" 
                                                        Background="{Binding StatusColor}" 
                                                        CornerRadius="3" 
                                                        Padding="6,2"
                                                        Margin="0,0,10,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding StatusText}" 
                                                              FontSize="11" 
                                                              FontWeight="Bold" 
                                                              Foreground="White"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                              FontSize="13" 
                                                              Foreground="#E0E0E0"
                                                              VerticalAlignment="Center"
                                                              TextTrimming="CharacterEllipsis"/>
                                                    <Button Content="VS"
                                                            Margin="10,0,0,0"
                                                            Padding="8,2"
                                                            FontSize="11"
                                                            Foreground="White"
                                                            Background="#3A3F54"
                                                            BorderBrush="#5C6BC0"
                                                            Cursor="Hand"
                                                            Tag="{Binding}"
                                                            Click="OpenCodeButton_Click"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <Button Content="ðŸ“‚" 
                                                            Width="32" Height="32"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            ToolTip="Show in Explorer"
                                                            Tag="{Binding Name}"
                                                            Click="ShowInExplorer_Click"/>
                                                    
                                                    <Button Content="ðŸ—‘ï¸" 
                                                            Width="32" Height="32"
                                                            Margin="5,0,0,0"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            ToolTip="Delete File"
                                                            Tag="{Binding Name}"
                                                            Click="DeleteFile_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>

                        <controls:DiffViewer Grid.Column="2"
                                             x:Name="CommitDiffViewer"
                                             Title="Diff preview"
                                             EmptyMessage="Select a file to review its diff"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Commit Message -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Text="Commit Message:" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                <TextBox x:Name="CommitMessageTextBox" 
                        Height="80" 
                        TextWrapping="Wrap" 
                        AcceptsReturn="True"
                        Background="#3A3A3A"
                        Foreground="White"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        Padding="10"
                        FontSize="13"/>
            </StackPanel>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Height="45" 
                        Width="100" 
                        Margin="0,0,15,0"
                        Background="Transparent"
                        Foreground="#CCCCCC"
                        BorderThickness="1"
                        BorderBrush="#555555"
                        FontSize="14"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Commit &amp; Sync" 
                        Height="45" 
                        Width="150"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="Commit_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>


