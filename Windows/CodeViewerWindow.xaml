<Window x:Class="GitDeployPro.Windows.CodeViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Code Viewer"
        Height="720"
        Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="CanResize"
        WindowStyle="None">
    <Border BorderBrush="#333" BorderThickness="1" CornerRadius="8" Margin="10" Background="#1E1E1E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#252526">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Margin="16,6">
                    <TextBlock x:Name="TitleText" FontSize="15" Foreground="White" FontWeight="Bold" />
                    <TextBlock x:Name="SubTitleText" FontSize="12" Foreground="#BBBBBB" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button x:Name="EditToggleButton"
                            Content="Enable Edit"
                            Width="120"
                            Height="30"
                            Margin="0,0,8,0"
                            Background="#3949AB"
                            Foreground="White"
                            BorderBrush="#5C6BC0"
                            Click="EditToggleButton_Click"/>
                    <Button x:Name="SaveButton"
                            Content="Save"
                            Width="90"
                            Height="30"
                            Margin="0,0,8,0"
                            Background="#455A64"
                            Foreground="White"
                            BorderBrush="#64B5F6"
                            Click="SaveButton_Click"/>
                    <Button x:Name="CopyButton"
                            Content="Copy"
                            Width="80"
                            Height="30"
                            Margin="0,0,8,0"
                            Background="#2F3B52"
                            Foreground="White"
                            BorderBrush="#546E7A"
                            Click="CopyButton_Click"/>
                    <Button x:Name="CloseButton"
                            Content="Close"
                            Width="80"
                            Height="30"
                            Background="#B71C1C"
                            Foreground="White"
                            BorderBrush="#FF5252"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <wv:WebView2 x:Name="CodeWebView"
                         Grid.Row="1"
                         Margin="0"
                         DefaultBackgroundColor="#FF1E1E1E" />
        </Grid>
    </Border>
</Window>

