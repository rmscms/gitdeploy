<mah:MetroWindow x:Class="GitDeployPro.Windows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="NEW FOLDER" Height="175" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#252526" Foreground="#F1F1F1"
        WindowTitleBrush="#0FB981"
        NonActiveWindowTitleBrush="#0FB981">
    <Grid Margin="20,18,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="PromptTextBlock" Grid.Row="0" Foreground="White" FontSize="13" Margin="0,0,0,0" FontWeight="SemiBold"/>
        
        <TextBox x:Name="InputTextBox" Grid.Row="1" Height="32" Margin="0,0,0,18" 
                 Background="#333337" Foreground="White" BorderBrush="#434346" BorderThickness="1"
                 Padding="8,6"
                 FontSize="13"
                 KeyDown="InputTextBox_KeyDown"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button x:Name="OkButton" Content="OK" Width="90" Height="32" Margin="0,0,10,0"
                    Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand"
                    FontSize="13" FontWeight="SemiBold"
                    Click="OkButton_Click" IsDefault="True">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="CancelButton" Content="Cancel" Width="90" Height="32"
                    Background="#3E3E42" Foreground="White" BorderThickness="0" Cursor="Hand"
                    FontSize="13" FontWeight="SemiBold"
                    Click="CancelButton_Click" IsCancel="True">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
