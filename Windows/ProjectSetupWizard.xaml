<Window x:Class="GitDeployPro.Windows.ProjectSetupWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Project Setup Wizard" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#202020" CornerRadius="10" BorderBrush="#3F3F3F" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸš€ Project Setup" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Configure Git and Deployment for your new project." Foreground="#AAAAAA" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content Area -->
            <Border Grid.Row="1" Background="#2B2B2B" CornerRadius="8" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Step 1: Git Source -->
                        <TextBlock Text="1. Git Repository Source" FontSize="16" FontWeight="SemiBold" Foreground="#4FC3F7" Margin="0,0,0,10"/>
                        <StackPanel Margin="15,0,0,20">
                            <RadioButton x:Name="LocalGitRadio" GroupName="GitSource" Content="Local Repository (Initialize new)" IsChecked="True" Foreground="White" Margin="0,0,0,10" Checked="GitSource_Checked"/>
                            <StackPanel x:Name="LocalGitPanel" Margin="25,0,0,15">
                                <TextBlock Text="Initial Branch Name:" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                                <TextBox x:Name="LocalBranchName" Text="master" Width="200" HorizontalAlignment="Left" Background="#3A3A3A" Foreground="White" Padding="5"/>
                            </StackPanel>

                            <RadioButton x:Name="RemoteGitRadio" GroupName="GitSource" Content="Remote Repository (Clone/Connect)" Foreground="White" Margin="0,0,0,10" Checked="GitSource_Checked"/>
                            <StackPanel x:Name="RemoteGitPanel" Margin="25,0,0,5" Visibility="Collapsed">
                                <TextBlock Text="Remote URL (HTTPS/SSH):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                                <TextBox x:Name="RemoteUrlBox" Width="400" HorizontalAlignment="Left" Background="#3A3A3A" Foreground="White" Padding="5"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Step 2: FTP Configuration -->
                        <TextBlock Text="2. Deployment Target (FTP/SFTP)" FontSize="16" FontWeight="SemiBold" Foreground="#4FC3F7" Margin="0,0,0,10"/>
                        <CheckBox x:Name="EnableFtpCheck" Content="Enable FTP Deployment" Foreground="White" Margin="15,0,0,10" Checked="EnableFtp_Checked" Unchecked="EnableFtp_Checked"/>
                        
                        <StackPanel x:Name="FtpConfigPanel" Margin="40,0,0,20" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Host:" Foreground="#CCCCCC" Margin="0,5,0,5"/>
                                    <TextBox x:Name="FtpHostBox" Background="#3A3A3A" Foreground="White" Padding="5"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Width="80">
                                    <TextBlock Text="Port:" Foreground="#CCCCCC" Margin="0,5,0,5"/>
                                    <TextBox x:Name="FtpPortBox" Text="21" Background="#3A3A3A" Foreground="White" Padding="5" HorizontalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Username:" Foreground="#CCCCCC" Margin="0,10,0,5"/>
                            <TextBox x:Name="FtpUserBox" Background="#3A3A3A" Foreground="White" Padding="5"/>

                            <TextBlock Text="Password:" Foreground="#CCCCCC" Margin="0,10,0,5"/>
                            <PasswordBox x:Name="FtpPassBox" Background="#3A3A3A" Foreground="White" Padding="5"/>

                            <TextBlock Text="Remote Path:" Foreground="#CCCCCC" Margin="0,10,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="FtpPathBox" Grid.Column="0" Text="/" Background="#3A3A3A" Foreground="White" Padding="5"/>
                                <Button Content="Browse" Grid.Column="1" Width="60" Height="26" Margin="10,0,0,0" Background="#333333" Foreground="White" BorderThickness="0" Click="BrowseFtp_Click"/>
                            </Grid>
                            
                            <CheckBox x:Name="UseSshCheck" Content="Use SFTP/SSH" Foreground="#CCCCCC" Margin="0,15,0,5" Checked="UseSsh_Checked" Unchecked="UseSsh_Checked"/>
                            <Button Content="ðŸ”„ Test Connection" HorizontalAlignment="Left" Height="30" Width="140" Background="#333333" Foreground="White" BorderThickness="0" Margin="0,5,0,0" Click="TestFtp_Click"/>
                        </StackPanel>

                        <!-- Step 3: Branch Strategy -->
                        <TextBlock Text="3. Branch Strategy" FontSize="16" FontWeight="SemiBold" Foreground="#4FC3F7" Margin="0,0,0,10"/>
                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="Source Branch (Development):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            <ComboBox x:Name="SourceBranchCombo" Width="200" HorizontalAlignment="Left" IsEditable="True" Text="master" Margin="0,0,0,10">
                                <ComboBoxItem Content="master"/>
                                <ComboBoxItem Content="main"/>
                                <ComboBoxItem Content="beta"/>
                            </ComboBox>
                            
                            <TextBlock Text="Target Branch (Production/Deploy):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            <ComboBox x:Name="TargetBranchCombo" Width="200" HorizontalAlignment="Left" IsEditable="True" Text="production">
                                <ComboBoxItem Content="production"/>
                                <ComboBoxItem Content="main"/>
                                <ComboBoxItem Content="master"/>
                            </ComboBox>
                            <TextBlock Text="Files will be deployed from Target Branch." FontSize="11" Foreground="#808080" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="40" Background="Transparent" Foreground="#CCCCCC" BorderBrush="#555555" BorderThickness="1" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button x:Name="FinishButton" Content="Finish &amp; Setup" Width="150" Height="40" Background="#2E7D32" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="Finish_Click"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid x:Name="OverlayGrid" Grid.RowSpan="3" Background="#AA000000" Visibility="Collapsed" Margin="-30">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="10" Background="#333333" Foreground="#4FC3F7" BorderThickness="0"/>
                    <TextBlock Text="Please wait, setting up project..." Foreground="White" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,20,0,10"/>
                    <TextBlock x:Name="LogText" Text="Initializing..." Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
