<mah:MetroWindow x:Class="GitDeployPro.Windows.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:GitDeployPro.Controls"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Terminal" Height="600" Width="900"
        Background="#1E1E1E"
        Foreground="White"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        BorderBrush="#3E3E42"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#444444"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="Auto"/> <!-- Presets -->
            <RowDefinition Height="*"/>    <!-- Terminal -->
        </Grid.RowDefinitions>

        <!-- SSH Connection Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="SSH Connection:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <ComboBox x:Name="SshProfilesCombo" Width="250" Height="28" 
                          DisplayMemberPath="DisplayName"
                          Background="#333337" Foreground="White"
                          SelectionChanged="SshProfilesCombo_SelectionChanged">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#333337"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>

                <Button Content="ðŸ”Œ Quick Connect" Margin="10,0,0,0" Height="28" Padding="10,0"
                        Style="{StaticResource ModernButtonStyle}" Background="#007ACC"
                        Click="QuickConnect_Click"/>

                <Button Content="âš™ï¸ Manage Profiles" Margin="10,0,0,0" Height="28" Padding="10,0"
                        Style="{StaticResource ModernButtonStyle}" Background="#3E3E42"
                        Click="ManageProfiles_Click"/>
            </StackPanel>
        </Border>

        <!-- Command Presets -->
        <Border Grid.Row="1" Background="#222326" Padding="10" BorderBrush="#1F1F1F" BorderThickness="0,0,0,1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PresetComboBox"
                              Grid.Column="0"
                              Height="28"
                              Background="#2F3035"
                              Foreground="White"
                              DisplayMemberPath="Title"
                              SelectedValuePath="Id"
                              Margin="0,0,12,0"/>
                    <Button Content="Insert"
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            Padding="14,4"
                            Background="#3F8EF7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="UsePreset_Click"/>
                    <Button Content="Delete"
                            Grid.Column="2"
                            Margin="0,0,8,0"
                            Padding="14,4"
                            Background="#3A3B40"
                            Foreground="#FF8A80"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DeletePreset_Click"/>
                    <CheckBox x:Name="BroadcastAllCheckBox"
                              Grid.Column="3"
                              Content="Send to all open terminals"
                              Foreground="#9FA8DA"
                              VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="PresetTitleBox"
                             mah:TextBoxHelper.Watermark="Title"
                             Grid.Column="0"
                             Margin="0,0,12,0"/>
                    <TextBox x:Name="PresetCommandBox"
                             mah:TextBoxHelper.Watermark="Command"
                             Grid.Column="1"
                             Margin="0,0,12,0"/>
                    <Button Content="Save"
                            Grid.Column="2"
                            Padding="14,4"
                            Background="#3F8EF7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="AddPresetButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <controls:TerminalControl x:Name="MyTerminal" Grid.Row="2"/>
    </Grid>
</mah:MetroWindow>
