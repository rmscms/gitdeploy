<mah:MetroWindow x:Class="GitDeployPro.Windows.FileConflictDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="File Exists"
                 Height="300"
                 Width="620"
                 WindowStartupLocation="CenterOwner"
                 WindowStyle="ToolWindow"
                 ResizeMode="NoResize"
                 ShowCloseButton="True"
                 BorderThickness="0"
                 Background="#202020"
                 Foreground="White"
                 Closing="FileConflictDialog_Closing">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ðŸš¨ Conflict detected"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Another file already exists at the destination. Decide how to proceed."
                       Foreground="#B0B0B0"
                       Margin="0,0,0,10"/>
            <Border Background="#151515"
                    CornerRadius="6"
                    Padding="12"
                    BorderBrush="#333333"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Conflicting file:"
                               FontWeight="SemiBold"
                               Foreground="#8DD1FF"/>
                    <TextBlock x:Name="FilePathText"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"
                               Foreground="#E0E0E0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,5,0,0">
                <StackPanel Width="150" Margin="0,0,8,0">
                    <TextBlock Text="Overwrite"
                               FontSize="12"
                               Foreground="#8DD1FF"/>
                    <Button Content="Overwrite file"
                            Margin="0,5,0,0"
                            Padding="14,8"
                            Background="#1E88E5"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="Overwrite_Click"/>
                </StackPanel>
                <StackPanel Width="150" Margin="0,0,8,0">
                    <TextBlock Text="Skip"
                               FontSize="12"
                               Foreground="#8DD1FF"/>
                    <Button Content="Skip this file"
                            Margin="0,5,0,0"
                            Padding="14,8"
                            Background="#546E7A"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="Skip_Click"/>
                </StackPanel>
                <StackPanel Width="150" Margin="0,0,8,0">
                    <TextBlock Text="Apply to all"
                               FontSize="12"
                               Foreground="#8DD1FF"/>
                    <Button Content="Overwrite all"
                            Margin="0,5,0,0"
                            Padding="14,8"
                            Background="#0D47A1"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="OverwriteAll_Click"/>
                </StackPanel>
                <StackPanel Width="150" Margin="0,0,8,0">
                    <TextBlock Text="Apply to all"
                               FontSize="12"
                               Foreground="#8DD1FF"/>
                    <Button Content="Skip all"
                            Margin="0,5,0,0"
                            Padding="14,8"
                            Background="#37474F"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="SkipAll_Click"/>
                </StackPanel>
                <StackPanel Width="150" Margin="0,0,0,0">
                    <TextBlock Text="Abort"
                               FontSize="12"
                               Foreground="#FF8A80"/>
                    <Button Content="Cancel"
                            Margin="0,5,0,0"
                            Padding="14,8"
                            Background="#C62828"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>

