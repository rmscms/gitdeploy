<Window x:Class="GitDeployPro.Windows.InitGitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Initialize Git Repository" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#202020" 
            CornerRadius="10" 
            BorderBrush="#3F3F3F" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸŒ±" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Initialize Git Repository" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Set up version control for this project." 
                          Foreground="#AAAAAA" 
                          Margin="48,5,0,0" 
                          FontSize="14"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1">
                <!-- Branches -->
                <TextBlock Text="Select Branches to Create:" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Border Background="#2B2B2B" CornerRadius="6" Padding="15">
                    <WrapPanel>
                        <CheckBox x:Name="MainBranchCheck" Content="main" IsChecked="True" Foreground="#CCCCCC" Margin="0,0,20,10"/>
                        <CheckBox x:Name="MasterBranchCheck" Content="master" Foreground="#CCCCCC" Margin="0,0,20,10"/>
                        <CheckBox x:Name="BetaBranchCheck" Content="beta" Foreground="#CCCCCC" Margin="0,0,20,10"/>
                        <CheckBox x:Name="DevBranchCheck" Content="development" Foreground="#CCCCCC" Margin="0,0,20,10"/>
                    </WrapPanel>
                </Border>

                <!-- Remote -->
                <TextBlock Text="Remote Repository URL (Optional):" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold" Margin="0,20,0,10"/>
                <TextBox x:Name="RemoteUrlTextBox" 
                        Height="40" 
                        Background="#3A3A3A"
                        Foreground="#4FC3F7"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        Padding="10"
                        FontSize="13"/>
                <TextBlock Text="e.g. https://github.com/username/repo.git" Foreground="#666666" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" 
                        Height="40" 
                        Width="100" 
                        Margin="0,0,15,0"
                        Background="Transparent"
                        Foreground="#CCCCCC"
                        BorderThickness="1"
                        BorderBrush="#555555"
                        FontSize="14"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="InitButton"
                        Content="ðŸš€ Initialize &amp; Create" 
                        Height="40" 
                        Padding="20,0"
                        Background="#2E7D32"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="Init_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

