<UserControl x:Class="GitDeployPro.Controls.SessionManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:GitDeployPro.Models"
             Background="#252526">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter -->
                <TextBox x:Name="FilterTextBox" 
                         Grid.Column="0"
                         mah:TextBoxHelper.Watermark="Filter by folder/session name..."
                         Background="#333337" 
                         Foreground="White"
                         BorderBrush="#434346"
                         Margin="0,0,10,0"
                         TextChanged="FilterTextBox_TextChanged"/>

                <!-- Toolbar Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”—" ToolTip="Link" Width="32" Height="32" Margin="2" Background="#3E3E42" Foreground="White" BorderThickness="0" Click="LinkButton_Click"/>
                    <Button Content="+" ToolTip="Add Folder" Width="32" Height="32" Margin="2" Background="#0FB981" Foreground="White" BorderThickness="0" Click="AddFolderButton_Click"/>
                    <Button Content="â€“" ToolTip="Remove" Width="32" Height="32" Margin="2" Background="#E74444" Foreground="White" BorderThickness="0" Click="RemoveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TreeView -->
        <Grid Grid.Row="1">
            <Border Background="#252526" Padding="10">
                <TreeView x:Name="SessionsTreeView" 
                          Background="Transparent" 
                          BorderThickness="0"
                          SelectedItemChanged="SessionsTreeView_SelectedItemChanged"
                          AllowDrop="True"
                          DragOver="SessionsTreeView_DragOver"
                          Drop="SessionsTreeView_Drop"
                          ContextMenuOpening="SessionsTreeView_ContextMenuOpening">
                    <TreeView.Resources>
                        <Style TargetType="{x:Type TreeViewItem}" x:Key="NoExpanderTreeViewItemStyle">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                        <StackPanel>
                                            <Border x:Name="Bd" 
                                                   Background="Transparent" 
                                                   Padding="2"
                                                   MinHeight="22">
                                                <ContentPresenter x:Name="PART_Header" 
                                                                 ContentSource="Header" 
                                                                 HorizontalAlignment="Left"/>
                                            </Border>
                                            <ItemsPresenter x:Name="ItemsHost" 
                                                           Margin="15,0,0,0"
                                                           Visibility="Visible"/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsExpanded" Value="false">
                                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="true">
                                                <Setter TargetName="Bd" Property="Background" Value="#007ACC"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="true"/>
                                                    <Condition Property="IsSelected" Value="false"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#3E3E42"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </TreeView.Resources>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource NoExpanderTreeViewItemStyle}">
                            <Setter Property="AllowDrop" Value="True"/>
                            <Setter Property="ContextMenu" Value="{x:Null}"/>
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TreeViewItem_PreviewMouseLeftButtonDown"/>
                            <EventSetter Event="MouseLeftButtonUp" Handler="TreeViewItem_MouseLeftButtonUp"/>
                            <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
                            <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                            <EventSetter Event="PreviewMouseMove" Handler="TreeViewItem_PreviewMouseMove"/>
                            <EventSetter Event="DragOver" Handler="TreeViewItem_DragOver"/>
                            <EventSetter Event="Drop" Handler="TreeViewItem_Drop"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                    <Setter Property="IsExpanded" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <Border Background="Transparent" 
                                    Padding="2" 
                                    Margin="0"
                                    PreviewMouseLeftButtonDown="ItemContent_PreviewMouseLeftButtonDown"
                                    PreviewMouseMove="ItemContent_PreviewMouseMove"
                                    Control.MouseDoubleClick="ItemContent_MouseDoubleClick"
                                    MouseRightButtonUp="ItemContent_MouseRightButtonUp">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" 
                                              Foreground="{Binding IconColor}"
                                              Margin="0,0,8,0" 
                                              FontSize="16"
                                              FontFamily="Segoe UI Emoji"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding DisplayNameWithIndicator}" 
                                              VerticalAlignment="Center"
                                              FontSize="14"
                                              Foreground="#E0E0E0"/>
                                    <TextBlock Text="{Binding ConnectionType}" 
                                              FontSize="11" 
                                              Foreground="#808080" 
                                              Margin="8,0,0,0" 
                                              VerticalAlignment="Center"
                                              Visibility="{Binding ConnectionTypeVisibility}"/>
                                </StackPanel>
                            </Border>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
        </Grid>
    </Grid>
</UserControl>

