<Window x:Class="GitDeployPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="GitDeploy Pro" 
        Height="650" 
        Width="1100"
        Icon="icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#202020"
        BorderBrush="#3F3F3F"
        BorderThickness="1"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                     ResizeBorderThickness="5" 
                     GlassFrameThickness="0"
                     CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar - Windows Style -->
        <Border Grid.Column="0" Background="#2B2B2B" BorderThickness="0,0,1,0" BorderBrush="#3F3F3F">
    <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo/Header -->
                <Border Grid.Row="0" Margin="20,30,20,30">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#0078D420" CornerRadius="12" Width="60" Height="60" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸš€" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="GitDeploy Pro" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  Margin="0,12,0,0"/>
                        <TextBlock Text="v1.0.0" 
                                  FontSize="12" 
                                  Foreground="#999999" 
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="12,0">
                    <Button Height="48" 
                           Margin="0,4"
                           Background="Transparent"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="Dashboard_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                   CornerRadius="6" 
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“Š" FontSize="20" VerticalAlignment="Center" Foreground="White"/>
                                                    <TextBlock Text="Dashboard" 
                                                              FontSize="14" 
                                                              Foreground="#E0E0E0" 
                                                              VerticalAlignment="Center" 
                                                              Margin="15,0,0,0"
                                                              FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/> <!-- Dark gray hover -->
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Height="48" 
                           Margin="0,4"
                           Background="Transparent"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="Deploy_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                   CornerRadius="6" 
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸš€" FontSize="20" VerticalAlignment="Center" Foreground="White"/>
                                                    <TextBlock Text="Deploy" 
                                                              FontSize="14" 
                                                              Foreground="#E0E0E0" 
                                                              VerticalAlignment="Center" 
                                                              Margin="15,0,0,0"
                                                              FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Height="48" 
                           Margin="0,4"
                           Background="Transparent"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="Git_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                   CornerRadius="6" 
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ±" FontSize="20" VerticalAlignment="Center" Foreground="White"/>
                                                    <TextBlock Text="Git &amp; GitHub" 
                                                              FontSize="14" 
                                                              Foreground="#E0E0E0" 
                                                              VerticalAlignment="Center" 
                                                              Margin="15,0,0,0"
                                                              FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Height="48" 
                           Margin="0,4"
                           Background="Transparent"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="History_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                   CornerRadius="6" 
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“œ" FontSize="20" VerticalAlignment="Center" Foreground="White"/>
                                                    <TextBlock Text="History" 
                                                              FontSize="14" 
                                                              Foreground="#E0E0E0" 
                                                              VerticalAlignment="Center" 
                                                              Margin="15,0,0,0"
                                                              FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Height="48" 
                           Margin="0,4"
                           Background="Transparent"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="Settings_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                   CornerRadius="6" 
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âš™ï¸" FontSize="20" VerticalAlignment="Center" Foreground="White"/>
                                                    <TextBlock Text="Settings" 
                                                              FontSize="14" 
                                                              Foreground="#E0E0E0" 
                                                              VerticalAlignment="Center" 
                                                              Margin="15,0,0,0"
                                                              FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="2" Background="#252525" Padding="15" Margin="12,10,12,20" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Tip" FontSize="12" Foreground="#999999" Margin="0,0,0,4" FontWeight="Bold"/>
                        <TextBlock Text="Ready to deploy? Click the Deploy button to start." 
                                  FontSize="11" 
                                  Foreground="#BBBBBB" 
                                  TextWrapping="Wrap"
                                  LineHeight="16"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#202020">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="Transparent">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="â”€" Width="46" Height="32" Background="Transparent" Foreground="#AAAAAA" BorderThickness="0" Click="Minimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="â˜" Width="46" Height="32" Background="Transparent" Foreground="#AAAAAA" BorderThickness="0" Click="Maximize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#383838"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="âœ•" Width="46" Height="32" Background="Transparent" Foreground="#AAAAAA" BorderThickness="0" Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Page Content -->
            <Frame x:Name="ContentFrame" 
                  Grid.Row="1" 
                  NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
